
.container {
  display: flex;
  flex-direction: column;
  background-color:#fff; 
  font-family: 'Raleway', sans-serif;
}

.quote-text {
  margin: 30rpx;
  border-radius: 2rpx;
  clear: both;
  background-color: #fff; 
}

.content {
  margin: 3px auto auto 3px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  height: auto;
  width: 345px;
  height: auto;
  clear: both;
  background-color: #fff; 
  font-weight: 500;
  font-size: 1.25em;
  color: #fff;
}

.quote-author {
  height: auto;
  padding-top: 25px;
  text-align: right;
  color: #fff;
}

.container .buttons {
    width: 450px;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.container .buttons .button {
    color: #fff;
    width: 300%;
    background-color: #333;
    opacity: 1;
}

button {
  color: #fff;
  font-weight: 500;
  font-size: 0.90em;
  text-transform: uppercase;
  letter-spacing: 2px;
  display: inline-block;
  position: relative;
  font-family: '微软雅黑';
  -webkit-mask-image: linear-gradient(-75deg, rgba(0,0,0,.6) 30%, #000 50%, rgba(0,0,0,.6) 70%);
  -webkit-mask-size: 200%;
}

  
